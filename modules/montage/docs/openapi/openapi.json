{
  "openapi": "3.0.3",
  "info": {
    "title": "Montage API",
    "version": "0.1.0"
  },
  "paths": {
    "/health": {
      "get": {
        "summary": "Liveness",
        "responses": {
          "200": {"description": "alive"}
        }
      }
    },
    "/ready": {
      "get": {
        "summary": "Readiness",
        "responses": {
          "200": {"description": "ready"},
          "503": {"description": "dependencies unavailable"}
        }
      }
    },
    "/openapi.json": {
      "get": {
        "summary": "Serve OpenAPI spec",
        "responses": {
          "200": {"description": "OpenAPI", "content": {"application/json": {}}}
        }
      }
    },
    "/api/v1/montage/crews": {
      "get": {
        "summary": "List crews",
        "parameters": [
          {
            "name": "limit",
            "in": "query",
            "schema": {"type": "integer", "minimum": 1, "maximum": 100},
            "description": "Max items"
          }
        ],
        "responses": {
          "200": {
            "description": "Crew collection",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "items": {
                      "type": "array",
                      "items": {"$ref": "#/components/schemas/Crew"}
                    }
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Create crew",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {"$ref": "#/components/schemas/CrewCreate"}
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {"$ref": "#/components/schemas/Crew"}
              }
            }
          },
          "400": {"description": "Validation error"}
        }
      }
    },
    "/api/v1/montage/crews/{id}": {
      "put": {
        "summary": "Update crew",
        "parameters": [
          {"name": "id", "in": "path", "required": true, "schema": {"type": "string", "format": "uuid"}}
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {"$ref": "#/components/schemas/CrewUpdate"}
            }
          }
        },
        "responses": {
          "200": {"description": "Updated", "content": {"application/json": {"schema": {"$ref": "#/components/schemas/Crew"}}}},
          "400": {"description": "Validation error"},
          "404": {"description": "Not found"}
        }
      }
    },
    "/api/v1/montage/vehicles": {
      "get": {
        "summary": "List vehicles",
        "parameters": [
          {"name": "limit", "in": "query", "schema": {"type": "integer", "minimum": 1, "maximum": 100}}
        ],
        "responses": {
          "200": {
            "description": "Vehicle collection",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "items": {
                      "type": "array",
                      "items": {"$ref": "#/components/schemas/Vehicle"}
                    }
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Create vehicle",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {"$ref": "#/components/schemas/VehicleCreate"}
            }
          }
        },
        "responses": {
          "201": {"description": "Created", "content": {"application/json": {"schema": {"$ref": "#/components/schemas/Vehicle"}}}},
          "400": {"description": "Validation error"}
        }
      }
    },
    "/api/v1/montage/vehicles/{id}": {
      "put": {
        "summary": "Update vehicle",
        "parameters": [
          {"name": "id", "in": "path", "required": true, "schema": {"type": "string", "format": "uuid"}}
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {"$ref": "#/components/schemas/VehicleUpdate"}
            }
          }
        },
        "responses": {
          "200": {"description": "Updated", "content": {"application/json": {"schema": {"$ref": "#/components/schemas/Vehicle"}}}},
          "400": {"description": "Validation error"},
          "404": {"description": "Not found"}
        }
      }
    },
    "/api/v1/montage/tasks": {
      "get": {
        "summary": "List tasks",
        "parameters": [
          {"name": "limit", "in": "query", "schema": {"type": "integer", "minimum": 1, "maximum": 100}}
        ],
        "responses": {
          "200": {"description": "Task collection", "content": {"application/json": {"schema": {"type": "object", "properties": {"items": {"type": "array", "items": {"$ref": "#/components/schemas/Task"}}}}}}}
        }
      },
      "post": {
        "summary": "Create task",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {"$ref": "#/components/schemas/TaskCreate"}
            }
          }
        },
        "responses": {
          "201": {"description": "Created", "content": {"application/json": {"schema": {"$ref": "#/components/schemas/Task"}}}},
          "400": {"description": "Validation error"}
        }
      }
    },
    "/api/v1/montage/tasks/{id}": {
      "put": {
        "summary": "Update task",
        "parameters": [
          {"name": "id", "in": "path", "required": true, "schema": {"type": "string", "format": "uuid"}}
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {"$ref": "#/components/schemas/TaskUpdate"}
            }
          }
        },
        "responses": {
          "200": {"description": "Updated", "content": {"application/json": {"schema": {"$ref": "#/components/schemas/Task"}}}},
          "400": {"description": "Validation error"},
          "404": {"description": "Not found"}
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Crew": {
        "type": "object",
        "properties": {
          "id": {"type": "string", "format": "uuid"},
          "code": {"type": "string"},
          "name": {"type": "string"},
          "specialization": {"type": "string"},
          "createdAt": {"type": "string", "format": "date-time"},
          "updatedAt": {"type": "string", "format": "date-time"}
        }
      },
      "CrewCreate": {
        "type": "object",
        "required": ["code", "name"],
        "properties": {
          "code": {"type": "string"},
          "name": {"type": "string"},
          "specialization": {"type": "string"}
        }
      },
      "CrewUpdate": {
        "type": "object",
        "properties": {
          "name": {"type": "string"},
          "specialization": {"type": "string"}
        }
      },
      "Vehicle": {
        "type": "object",
        "properties": {
          "id": {"type": "string", "format": "uuid"},
          "code": {"type": "string"},
          "name": {"type": "string"},
          "plate": {"type": "string"},
          "capacity": {"type": "string"},
          "createdAt": {"type": "string", "format": "date-time"},
          "updatedAt": {"type": "string", "format": "date-time"}
        }
      },
      "VehicleCreate": {
        "type": "object",
        "required": ["code", "name"],
        "properties": {
          "code": {"type": "string"},
          "name": {"type": "string"},
          "plate": {"type": "string"},
          "capacity": {"type": "string"}
        }
      },
      "VehicleUpdate": {
        "type": "object",
        "properties": {
          "name": {"type": "string"},
          "plate": {"type": "string"},
          "capacity": {"type": "string"}
        }
      },
      "Task": {
        "type": "object",
        "properties": {
          "id": {"type": "string", "format": "uuid"},
          "code": {"type": "string"},
          "title": {"type": "string"},
          "status": {"type": "string"},
          "crewId": {"type": "string"},
          "vehicleId": {"type": "string"},
          "scheduledAt": {"type": "string", "format": "date-time"},
          "location": {"type": "string"},
          "createdAt": {"type": "string", "format": "date-time"},
          "updatedAt": {"type": "string", "format": "date-time"}
        }
      },
      "TaskCreate": {
        "type": "object",
        "required": ["code", "title"],
        "properties": {
          "code": {"type": "string"},
          "title": {"type": "string"},
          "crewId": {"type": "string"},
          "vehicleId": {"type": "string"},
          "scheduledAt": {"type": "string", "format": "date-time"},
          "location": {"type": "string"}
        }
      },
      "TaskUpdate": {
        "type": "object",
        "properties": {
          "title": {"type": "string"},
          "status": {"type": "string"},
          "crewId": {"type": "string"},
          "vehicleId": {"type": "string"},
          "scheduledAt": {"type": "string"},
          "location": {"type": "string"}
        }
      }
    }
  }
}
